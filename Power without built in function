class Solution {
    public double power(double x,long n)
    {
        if(n==0){
            return 1.0;
        }
        else if(n==1)
        {
            return x;
        }
        else if(n%2==0)
        {
            return power(x*x,n/2);
        }
        else
        {
            //for the case when the n is odd 
            return x*power(x,n-1);
        }
    }
    public double myPow(double x, int n) {
        long exp=n;
        if(exp<0)
        {
            x=1/x;
            exp=-exp;
        }
        return power(x,exp);
    }
}
